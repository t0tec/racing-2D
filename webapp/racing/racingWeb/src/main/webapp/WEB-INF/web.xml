<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
	<display-name>Servlet 3.0 Web Application</display-name>

	<servlet>
		<servlet-name>LoginServlet</servlet-name>
		<servlet-class>be.tiwi.vop.racing.servlets.LoginServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>LogoutServlet</servlet-name>
		<servlet-class>be.tiwi.vop.racing.servlets.LogoutServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>RegisterServlet</servlet-name>
		<servlet-class>be.tiwi.vop.racing.servlets.RegisterServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>GetUserServlet</servlet-name>
		<servlet-class>be.tiwi.vop.racing.servlets.GetUserServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>UpdateUserServlet</servlet-name>
		<servlet-class>be.tiwi.vop.racing.servlets.UpdateUserServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>CircuitServlet</servlet-name>
		<servlet-class>be.tiwi.vop.racing.servlets.CircuitServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>CreateTournamentServlet</servlet-name>
		<servlet-class>be.tiwi.vop.racing.servlets.CreateTournamentServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>TournamentServlet</servlet-name>
		<servlet-class>be.tiwi.vop.racing.servlets.TournamentServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>LoginServlet</servlet-name>
		<url-pattern>/login.do</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>LogoutServlet</servlet-name>
		<url-pattern>/logout.do</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>RegisterServlet</servlet-name>
		<url-pattern>/createUser.do</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>GetUserServlet</servlet-name>
		<url-pattern>/getProfile.do</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>UpdateUserServlet</servlet-name>
		<url-pattern>/updateUser.do</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>CircuitServlet</servlet-name>
		<url-pattern>/circuit.do</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>CreateTournamentServlet</servlet-name>
		<url-pattern>/createTournament.do</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>TournamentServlet</servlet-name>
		<url-pattern>/tournament.do</url-pattern>
	</servlet-mapping>


	<servlet>
		<servlet-name>JnlpDownloadServlet</servlet-name>
		<servlet-class>jnlp.sample.servlet.JnlpDownloadServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>JnlpDownloadServlet</servlet-name>
		<url-pattern>*.jnlp</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>JnlpDownloadServlet</servlet-name>
		<url-pattern>*.jar</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>JnlpDownloadServlet</servlet-name>
		<url-pattern>/app/*</url-pattern>
	</servlet-mapping>

	<filter>
		<filter-name>SessionFilter</filter-name>
		<filter-class>be.tiwi.vop.racing.servlets.filters.SessionFilter</filter-class>
		<init-param>
			<param-name>avoid-urls</param-name>
			<param-value>/index.html,/index.jsp,/register.jsp,/login.do,/logout.do,/createUser.do,/changeLanguage.jsp</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>SessionFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>

	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>

	<mime-mapping>
		<extension>jnlp</extension>
		<mime-type>application/x-java-jnlp-file</mime-type>
	</mime-mapping>
</web-app>
